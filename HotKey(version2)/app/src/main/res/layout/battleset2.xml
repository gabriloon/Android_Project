<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textColor="#ddffffff"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:text="Button2" />

    <TextView
        android:id="@+id/textView0"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#fff" />

    <Button
        android:id="@+id/set2"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="SET"
        android:textSize="40dp"
        ></Button>


    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#fff" />

    <ScrollView
        android:layout_gravity="center_horizontal"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:background="#ffff">
        <RadioGroup
            android:id="@+id/rgroup2"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/sethealthBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구급상자"
                android:textStyle="bold"
                android:textSize="30dp"
                ></RadioButton>

            <RadioButton
                android:id="@+id/seAdlenBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아드레날린"
                android:textStyle="bold"
                android:textSize="30dp"
                ></RadioButton>
            <RadioButton
                android:id="@+id/setBand2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="붕대"
                android:textStyle="bold"
                android:textSize="30dp"
                ></RadioButton>

            <RadioButton
                android:id="@+id/setkit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="의료용키트"
                android:textStyle="bold"
                android:textSize="30dp"
                ></RadioButton>

            <RadioButton
                android:id="@+id/PersonalChange2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시점 변경"
                android:textStyle="bold"
                android:textSize="30dp"
                ></RadioButton>
            <RadioButton
                android:id="@+id/reloading2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="재장전"
                android:textStyle="bold"
                android:textSize="30dp"
                ></RadioButton>
            <RadioButton
                android:id="@+id/voiceOnOff2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보이스 채팅 On/Off"
                android:textStyle="bold"
                android:textSize="30dp"
                ></RadioButton>
            <RadioButton
                android:id="@+id/cancel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="무장해제"
                android:textStyle="bold"
                android:textSize="30dp"
                ></RadioButton>
            <RadioButton
                android:id="@+id/fireIntheHole2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수류탄"
                android:textStyle="bold"
                android:textSize="30dp"
                ></RadioButton>
            <RadioButton
                android:id="@+id/sitDown2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="앉기"
                android:textStyle="bold"
                android:textSize="30dp"
                ></RadioButton>
            <RadioButton
                android:id="@+id/lie2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="엎드리기"
                android:textStyle="bold"
                android:textSize="30dp"
                ></RadioButton>

            <RadioButton
                android:id="@+id/zeroPointUp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영점조절 증가"
                android:textStyle="bold"
                android:textSize="30dp"
                ></RadioButton>
            <RadioButton
                android:id="@+id/zeroPointDown2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영점조절 감소"
                android:textStyle="bold"
                android:textSize="30dp"
                ></RadioButton>

            <RadioButton
                android:id="@+id/pinGet2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="핀 뽑기"
                android:textStyle="bold"
                android:textSize="30dp"
                ></RadioButton>

            <RadioButton
                android:id="@+id/myPositionPick2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 현재위치 지도에 표시"
                android:textStyle="bold"
                android:textSize="30dp"
                ></RadioButton>
            <RadioButton
                android:id="@+id/leftHead2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="고개 왼쪽으로 기울이기"
                android:textStyle="bold"
                android:textSize="25dp"
                ></RadioButton>
            <RadioButton
                android:id="@+id/rightHead2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="고개 오른쪽으로 기울이기"
                android:textStyle="bold"
                android:textSize="25dp"
                ></RadioButton>
        </RadioGroup>
    </ScrollView>

</LinearLayout>